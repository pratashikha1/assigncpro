#include <stdio.h>
float area(float a , float b);
int main()
{
   float b, h ;
   float result;
    printf("enter base and height");
    scanf("%f %f", &b ,&h);
    result = area(b , h);
    printf("the area of triangle is :%f",result);
}
float area(float a , float b)
{
float  area ;
   area=(a*b)/2 ;
   return area;
}

