#include <stdio.h>
float area(int a , int b);
int main()
{
   int b, h ;
   float result;
    printf("enter base and height");
    scanf("%d %d", &b ,&h);
    result = area(b , h);
    printf("the area of triangle is :%f",result);
}
float area(int a , int b)
{
float op , area ;
   op= a*b;
   area=op/2 ;
   return area;
}

